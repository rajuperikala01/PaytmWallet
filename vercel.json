{
  "builds": [
    {
      "src": "apps/next_app/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "apps/bank_webhook/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/user_app/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/bank-webhook/(.*)",
      "dest": "apps/bank_webhook/dist/index.js"
    },
    {
      "src": "/user-app/(.*)",
      "dest": "apps/user_app/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/next_app/$1"
    }
  ]
}
